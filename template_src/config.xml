<?xml version='1.0' encoding='utf-8'?>
<widget id="club.eldoretartisans.mzi" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Mzi</name>
    <description>
        A Comprehensive cordova template for mobile
    </description>
    <author email="brianobare@gmail.com" href="https://brianobare.top">
        Eldoret Artisans
    </author>
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="SplashScreenBackgroundColor" value="#FFFFFF" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="StatusBarOverlaysWebView" value="true" />
    <preference name="StatusBarBackgroundColor" value="#FFFFFF" />
    <preference name="StatusBarStyle" value="lightcontent" />
    <preference name="KeyboardResize" value="false" />
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <access launch-external="yes" origin="whatsapp:*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <preference name="Scheme" value="https" />
        <preference name="KeyboardAppearanceDark" value="false" />
        <allow-intent href="market:*" />
        <icon density="ldpi" src="res/icon/android/32.png" />
        <icon density="mdpi" src="res/icon/android/48.png" />
        <icon density="hdpi" src="res/icon/android/72.png" />
        <icon density="xhdpi" src="res/icon/android/96.png" />
        <icon density="xxhdpi" src="res/icon/android/144.png" />
        <icon density="xxxhdpi" src="res/icon/android/196.png" />
        <splash density="land-hdpi" src="res/screen/android/800x480.png" />
        <splash density="land-ldpi" src="res/screen/android/320x200.png" />
        <splash density="land-mdpi" src="res/screen/android/480x320.png" />
        <splash density="land-xhdpi" src="res/screen/android/1280x720.png" />
        <splash density="port-hdpi" src="res/screen/android/480x800.png" />
        <splash density="port-ldpi" src="res/screen/android/200x320.png" />
        <splash density="port-mdpi" src="res/screen/android/320x480.png" />
        <splash density="port-xhdpi" src="res/screen/android/720x1280.png" />
    </platform>
    <platform name="ios">
        <preference name="iosScheme" value="httpsionic" />
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-webpack" spec="0.0.2" />
    <plugin name="cordova-plugin-camera" spec="^4.0.3" />
    <plugin name="cordova-plugin-splashscreen" spec="^5.0.2" />
    <plugin name="cordova-plugin-device" spec="^2.0.2" />
    <plugin name="cordova-plugin-network-information" spec="^2.0.1" />
    <plugin name="cordova-plugin-statusbar" spec="^2.4.2" />
    <plugin name="cordova-plugin-app-version" spec="^0.1.9" />
    <plugin name="cordova-plugin-dialogs" spec="^2.0.1" />
    <plugin name="cordova-plugin-x-socialsharing" spec="^5.4.4">
        <variable name="ANDROID_SUPPORT_V4_VERSION" value="24.1.1+" />
    </plugin>
    <plugin name="cordova-plugin-local-notification" spec="^0.9.0-beta.2" />
    <plugin name="cordova-plugin-ionic-webview" spec="^4.0.0">
        <variable name="ANDROID_SUPPORT_ANNOTATIONS_VERSION" value="27.+" />
    </plugin>
    <plugin name="cordova-plugin-ionic-keyboard" spec="2.1.3" />
    <engine name="android" spec="7.1.4" />
    <engine name="browser" spec="5.0.4" />
</widget>
